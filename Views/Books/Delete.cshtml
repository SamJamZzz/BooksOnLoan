@model Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-3">Author:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Author)</dd>

        <dt class="col-sm-3">Title:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

        <dt class="col-sm-3">Year Published:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.YearPublished)</dd>

        <dt class="col-sm-3">Quantity:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookCode" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
